<div class="container text-center">
  <div class="row align-items-center">
      <h2 class="col ">MENSAJES</h2>
      <p class="col-2  ">BIENVENIDO ID: {{id}} {{persona}} </p>
      <div class="col-2"><a href="http://localhost:3000/admin/login"><button type="button" class="bi bi-box-arrow-right btn btn-danger mt-4"> LOGIN</button></a></div>
      <a class="col-2 btn btn-danger  order-last" href="/admin/login/logout" role="button"><i class="bi bi-box-arrow-right"></i> Cerrar sesi√≥n </a>
  </div>

  {{!-- PRODUCTOS --}}
  <div> 
          <table class="table mt-5">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">SKU</th>
                    <th scope="col">PRODUCTO</th>
                    <th scope="col">DESCRIPCION</th>
                    <th scope="col">ACCIONES</th>
                  </tr>
                </thead>
                {{#each productos}}
                    <tbody>
                      <tr>
                        <td>{{id}}</td>
                        <td>{{sku}}</td>
                        <td>{{producto}}</td>
                        <td>{{descripcion}}</td>
                        <td class="text-center">
                          <a class="btn btn-primary" href="/admin/mensajes/eliminar/{{id}}"><i class="bi bi-trash3-fill"></i></a>
                          <a class="btn btn-primary" href="/admin/mensajes/modificar/{{id}}"><i class="bi bi-pencil-fill"></i></a>
                        </td>
                      </tr>
                    </tbody>
                {{/each}}
          </table>
      
  </div>

</div>